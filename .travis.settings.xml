<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <profiles>
        <profile>
            <id>artifactory</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <repositories>
                <repository>
                    <id>release-repo</id>
                    <name>libs-release</name>
                    <url>http://artifactory-sdc.onsdigital.uk/artifactory/libs-release-local</url>
                </repository>
                <repository>
                    <id>snaphot-repo</id>
                    <url>http://artifactory-sdc.onsdigital.uk/artifactory/libs-snapshot-local/</url>
                </repository>
                <repository>
                    <id>notify-repo</id>
                    <url>http://artifactory-sdc.onsdigital.uk/artifactory/Gov-uk-notify-bintray</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>sonar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>

            <properties>
                <sonar.jdbc.url>jdbc:postgresql://localhost:5432/postgres?currentSchema=sonar</sonar.jdbc.url>
                <sonar.jdbc.driver>org.postgresql.Driver</sonar.jdbc.driver>
                <sonar.jdbc.username>sonar</sonar.jdbc.username>
                <sonar.jdbc.password>sonar</sonar.jdbc.password>
                <!-- SERVER ON A REMOTE HOST -->
                <!-- <sonar.host.url>http://localhost:9000</sonar.host.url> -->
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>artifactory</activeProfile>
        <activeProfile>sonar</activeProfile>
    </activeProfiles>
</settings>
